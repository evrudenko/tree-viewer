<% form({ method: :post },{ obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:title, type: :text, label: 'Название', placeholder: 'Иван Иванов')%>
    </div>
    <div class="large-12 cell">
      <%= f.input(:description, type: :text, label: 'Описание', placeholder: 'Человек с планеты Земля')%>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: form_type, class: 'button') %>
      <a href="<%= back_location %>" class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>
